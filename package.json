{
  "name": "watchword-api",
  "version": "0.1.0",
  "main": "src/index.ts",
  "repository": "https://github.com/wking-io/watchword",
  "author": "William King <contactg@wking.io>",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon -e js,graphql -x node -r now-env src/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r now-env src/index.js",
    "playground": "graphql playground",
    "dev": "npm-run-all --parallel start:dev playground",
    "prisma": "prisma deploy"
  },
  "now": {
    "alias": "watchword-api",
    "env": {
      "PRISMA_ENDPOINT": "@watchword-prisma-endpoint",
      "APP_SECRET": "@watchword-app-secret"
    }
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "graphql-yoga": "1.14.6",
    "jsonwebtoken": "8.2.2",
    "prisma-binding": "2.0.2"
  },
  "devDependencies": {
    "dotenv": "5.0.1",
    "graphql-cli": "2.16.1",
    "nodemon": "1.17.5",
    "now-env": "3.0.4",
    "npm-run-all": "4.1.3",
    "prisma": "1.8.3"
  }
}
